<launch>
    <!-- UNICYCLE 0 NODES -->
    <group>
        <!-- Kinematics Controller -->
        <node pkg="unicycle" exec="kinematics_controller" name="unicycle_0_kinematics_controller" output="screen">
            <param name="unicycle_id" value="unicycle_0"/>
