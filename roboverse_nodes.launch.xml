        <!-- Task Manager -->
        <node pkg="unicycle" exec="task_manager" name="unicycle_0_task_manager" output="screen">
            <param name="unicycle_id" value="unicycle_0"/>
            <param name="num_unicycles" value="3"/>
            <param name="unicycle_number" value="0"/>
            <param name="num_places" value="3"/>
            <!-- Target places parameters -->
            <param name="target_place_0_z" value="5.0"/>
            <param name="target_place_0_x" value="23.5"/>
            <param name="target_place_1_z" value="-17.0"/>
            <param name="target_place_1_x" value="55.0"/>
            <param name="target_place_2_z" value="21.0"/>
            <param name="target_place_2_x" value="54.0"/>
            <!-- Rendezvous places parameters -->
            <param name="rv_desired_place_z" value="5.0"/>
            <param name="rv_desired_place_x" value="42.8"/>
            <param name="current_target_place" value="0"/>
        </node>
        
        <!-- Rendez-vous Manager -->
